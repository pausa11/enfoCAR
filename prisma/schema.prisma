generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  createdAt DateTime @default(now())
  assets    Asset[]
  hasCompletedOnboarding Boolean @default(false)

}

model Asset {
  id               String            @id @default(uuid())
  name             String
  type             AssetType
  customAttributes Json?
  userId           String
  user             User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  financialRecords FinancialRecord[]
  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @updatedAt
  imageUrl         String?
  ownershipPercentage Float          @default(100.0)
  value            Decimal?          @db.Decimal(15, 2)
  driverPercentage Float             @default(0.0)
  driverPaymentMode DriverPaymentMode?
  driverSalaries   DriverSalary[]
  isBusinessAsset  Boolean           @default(true)
  serviceType      ServiceType       @default(PARTICULAR)
  documents       AssetDocument[]
  maintenanceRecords MaintenanceRecord[]
}

model DriverSalary {
  id        String   @id @default(uuid())
  assetId   String
  asset     Asset    @relation(fields: [assetId], references: [id], onDelete: Cascade)
  month     Int      // 1-12
  year      Int
  amount    Decimal  @db.Decimal(10, 2)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@unique([assetId, year, month])
}

model AssetDocument {
  id             String       @id @default(uuid())
  type           DocumentType
  identifier     String?      // e.g., policy number
  expirationDate DateTime?
  isActive       Boolean      @default(true)
  assetId        String
  asset          Asset        @relation(fields: [assetId], references: [id], onDelete: Cascade)
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
}

model FinancialRecord {
  id                  String              @id @default(uuid())
  amount              Decimal             @db.Decimal(10, 2)
  type                FinancialRecordType
  date                DateTime            @default(now())
  endDate             DateTime?
  description         String?
  assetId             String
  asset               Asset               @relation(fields: [assetId], references: [id], onDelete: Cascade)
  maintenanceRecordId String?
  maintenanceRecord   MaintenanceRecord?  @relation(fields: [maintenanceRecordId], references: [id], onDelete: SetNull)
  createdAt           DateTime            @default(now())
  updatedAt           DateTime            @updatedAt
}

enum AssetType {
  CARRO
  JEEP
  BUSETA
  TURBO
}

enum FinancialRecordType {
  INCOME
  EXPENSE
}

enum DriverPaymentMode {
  PERCENTAGE
  FIXED_SALARY
}

enum ServiceType {
  PARTICULAR
  PUBLICO
}

enum DocumentType {
  SOAT
  TECNOMECANICA
  POLIZA_TODO_RIESGO
  IMPUESTO_VEHICULAR
  TARJETA_PROPIEDAD
  OTRO
}

model MaintenanceRecord {
  id                    String            @id @default(uuid())
  type                  MaintenanceType
  description           String?
  cost                  Decimal           @db.Decimal(10, 2)
  date                  DateTime
  mileage               Int?              // Kilometraje al momento del mantenimiento
  nextServiceDate       DateTime?         // Fecha estimada del próximo servicio
  nextServiceMileage    Int?              // Kilometraje estimado del próximo servicio
  notes                 String?
  assetId               String
  asset                 Asset             @relation(fields: [assetId], references: [id], onDelete: Cascade)
  financialRecords      FinancialRecord[]
  createdAt             DateTime          @default(now())
  updatedAt             DateTime          @updatedAt
}

enum MaintenanceType {
  CAMBIO_ACEITE_MOTOR
  CAMBIO_ACEITE_TRANSMISION
  CAMBIO_LLANTAS
  CAMBIO_FILTROS
  REVISION_FRENOS
  ALINEACION_BALANCEO
  BATERIA
  REPUESTOS
  OTRO
}
